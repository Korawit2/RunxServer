// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserRunX {
  id             Int       @id @default(autoincrement())
  firstname_eng  String
  lastname_eng   String
  firstname_thai String?
  lastname_thai  String?
  birth_date     DateTime?
  gender         String?
  email          String    @unique
  password       String
  id_passport    String?
  nationality    String?
  policy         Boolean
  user_img       String?
  //Race_result    Race_result[]
}

model Organization {
  id   Int     @id @default(autoincrement())
  name String  @unique
  race Races[]
}

model Events {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  cover_img String?
  logo_img  String?
  country  String
  Races     Races[]
}

model Races {
  id          Int           @id @default(autoincrement())
  org         Organization  @relation(fields: [org_id], references: [id])
  org_id      Int
  event       Events        @relation(fields: [event_id], references: [id])
  event_id    Int
  name        String        @unique
  date        DateTime
  cover_img   String?
  logo_img    String?
  start_time  String
  max_point   Int
  distance    Int
  time_stamp  DateTime      @default(now())
  Race_result Race_result[]
}

model Race_result {
  id           Int      @id @default(autoincrement())
  race         Races    @relation(fields: [Races_id], references: [id])
  Races_id     Int
  //UserRunx      UserRunX @relation(fields: [runx_id], references: [id])
  runx_id      Int?
  rank         Int
  time         String
  firstname    String
  lastname     String
  gender       String
  age_group    String
  nationality  String
  claim_status Boolean  @default(false)
  time_stamp   DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
